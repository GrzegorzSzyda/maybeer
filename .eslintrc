{
    "parser": "babel-eslint",
    "plugins": ["flowtype"],
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "react-app",
    "rules": {
        "no-console": "error",
        "no-unused-vars": "error",
        "jsx-a11y/href-no-hash": "off",
        "jsx-a11y/anchor-is-valid": ["warn", { "aspects": ["invalidHref"] }],
        "flowtype/require-valid-file-annotation": ["error", "always"]
    }
}
